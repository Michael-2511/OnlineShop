﻿@{
    ViewBag.Title = "New";
}

<form method="post" action="/Products/New">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" name="Name" placeholder="">
        <label>Nume produs</label>
    </div>

    <div class="form-floating mb-3">
        <textarea class="form-control" name="Description" placeholder="" style="height: 100px; margin-bottom: 15px;"></textarea>
        <label>Descriere produs</label>
    </div>

    <div class="form-floating mb-3">
        <input type="number" class="form-control" name="Price" placeholder="">
        <label>Pret</label>
    </div>

    <input type="file" class="form-control"  name="Picture" />
    <br />

    <select class="form-select" name="CategoryId" style="margin-bottom: 15px">
        <option selected>Alege categoria</option>
        @foreach (var item in ViewBag.Categories)
        {
            <option value="@item.Id">@item.CategoryName</option>
        }
    </select>

    <button class="btn btn-success" type="submit">Adauga produs</button>

</form>