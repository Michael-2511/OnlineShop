@{
    ViewBag.Title = "Index";
}
@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}
<h2 class="text-center">Afisare produse</h2>
<br />



@foreach (var product in ViewBag.Products)
{
    <div class="card">

        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2">@product.Name</h3>

            <div class="card-text">@product.Price<div>LEI</div></div>

            <div class="d-flex justify-content-between flex-row mt-5">

                <div><i class="bi bi-globe"></i> @product.Category.CategoryName</div>

                <div><i class="bi bi-person"></i> @product.User.UserName</div>

            </div>
            <a class="btn btn-success" href="/Products/Show/@product.Id">Afisare produs</a>

        </div>

    </div>

    <br />
    <br />
}