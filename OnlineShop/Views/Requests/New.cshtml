﻿@{
    ViewBag.Title = "New";
}

<form method="post" action="/Requests/New">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" name="Description" placeholder="">
        <label>De ce vreti ca acest produs sa fie adaugat in magazinul nostru online?</label>
    </div>

    <t>Detalii produs</t>
    <br />
    <div class="form-floating mb-3">
        <input type="text" class="form-control" name="ProductName" placeholder="">
        <label>Nume produs</label>
    </div>

    <div class="form-floating mb-3">
        <textarea class="form-control" name="ProductDescription" placeholder="" style="height: 100px; margin-bottom: 15px;"></textarea>
        <label>Descriere produs</label>
    </div>

    <div class="form-floating mb-3">
        <input type="number" class="form-control" name="ProductPrice" placeholder="">
        <label>Pret</label>
    </div>

    <label>Imagine</label>
    <textarea name="ProductPicture"></textarea>
    <br />
    <br />

    <select class="form-select" name="CategoryId" style="margin-bottom: 15px">
        @foreach (var item in ViewBag.Categories)
        {
            <option value="@item.Id">@item.CategoryName</option>
        }
    </select>


    <button class="btn btn-success" type="submit">Trimite cerere</button>

</form>